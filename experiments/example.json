{
  "dataset_reader": {
    "type": "quill_responses",
    "tokenizer": {
        "type": "word",
        "word_splitter": {
            "type": "spacy",
            "language": "en"
        }
     }
  },
  "train_data_path": "data/interim/example_train.ndjson",
  "validation_data_path": "data/interim/example_dev.ndjson",
  "test_data_path": "data/interim/example_test.ndjson",
  "model": {
    "type": "basic_topic_classifier",
    "text_field_embedder": {
      "token_embedders": {
        "tokens": {
          "type": "embedding",
          "pretrained_file": "/home/yves/data/embeddings/glove/glove.6B.300d.txt",
          "embedding_dim": 300,
          "trainable": false
        }
      }
    },
    "seq2vec_encoder": {
      "type": "lstm",
      "bidirectional": true,
      "input_size": 300,
      "hidden_size": 100,
      "num_layers": 1,
      "dropout": 0.5
    }
  },
  "iterator": {
    "type": "bucket",
    "sorting_keys": [["tokens", "num_tokens"]],
    "batch_size": 32
  },
  "trainer": {
    "num_epochs": 40,
    "patience": 10,
    "cuda_device": -1,
    "grad_clipping": 5.0,
    "validation_metric": "-loss",
    "optimizer": {
      "type": "adam"
    }
  }
}
